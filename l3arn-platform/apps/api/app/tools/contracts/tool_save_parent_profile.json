        "type": "object",
        "properties": {
            "user_id": {
                "type": "string",
                "format": "uuid"
            },
            "tenant_id": {
                "type": "string",
                "format": "uuid"
            },
            "first_name": {
                "type": "string"
            },
            "last_name": {
                "type": "string"
            },
            "phone": {
                "type": "string"
            },
            "email": {
                "type": "string"
            },
            "city": {
                "type": "string"
            },
            "state": {
                "type": "string"
            },
            "country": {
                "type": "string"
            },
            "timezone": {
                "type": "string"
            }
        },
        "required": [
            "user_id",
            "tenant_id"
        ]
    },
    "output": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string"
            },
            "first_name": {
