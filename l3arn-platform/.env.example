# ============================================================
# L3ARN Platform — Environment Variables
# Copy to .env and fill in real values for local dev.
# NEVER commit the real .env file.
# ============================================================

# ── Supabase ─────────────────────────────────────────────────
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_JWKS_URL=http://localhost:54321/auth/v1/.well-known/jwks.json

# ── Database (direct Postgres connection) ────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ── FastAPI ──────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development
API_LOG_LEVEL=debug
API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Frontend ─────────────────────────────────────────────────
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_API_BASE_URL=http://localhost:8000

# ── Docker ───────────────────────────────────────────────────
COMPOSE_PROJECT_NAME=l3arn
